# ── PostgreSQL Database ─────────────────────────────────────
POSTGRES_DB=mikrotik_db
POSTGRES_USER=mikrotik_user
POSTGRES_PASSWORD=CHANGE_ME_strong_password_here

# ── Frontend Build (Vite bakes this at build time) ─────────
# For production: set to your VPS API URL e.g. https://api.skynity.org
VITE_API_BASE_URL=http://localhost:3001

# ── WireGuard VPN ──────────────────────────────────────────
WIREGUARD_SERVERURL=your-domain.com
WIREGUARD_SERVERPORT=51820
WIREGUARD_PEERS=3
WIREGUARD_PEERDNS=1.1.1.1
WIREGUARD_INTERNAL_SUBNET=10.13.13.0

# ── pgAdmin (Database Web UI on port 8080) ─────────────────
PGADMIN_DEFAULT_EMAIL=admin@your-domain.com
PGADMIN_DEFAULT_PASSWORD=CHANGE_ME_pgadmin_password

# ── Timezone ───────────────────────────────────────────────
TZ=Asia/Dhaka
